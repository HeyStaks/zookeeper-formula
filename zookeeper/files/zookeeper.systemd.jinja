[Unit]
Description=ZooKeeper coordination service
After=network.target

[Service]
User={{ user }}
Group={{ group }}
WorkingDirectory={{ home }}
SyslogIdentifier=zookeeper
ExecStart={{ exec }} start-foreground
SuccessExitStatus=143
LimitNOFILE=8192
Restart=on-failure

[Install]
WantedBy=multi-user.target